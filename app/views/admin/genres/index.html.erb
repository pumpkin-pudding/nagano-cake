<div class="container px-5 px-sm-0">
  <h3>ジャンル一覧・追加</h3>
  <div class="row mt-3">
      <div class="col-md-5">
<!-- ジャンル新規登録フォーム -->
       <%= form_with model: Genre.new,url: admin_genres_path do |f| %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <td>ジャンル名</td>
                <td><%= f.text_field :name %></td>
                <td><%= f.submit '新規登録', class:'btn btn-success' %></td>
              </tr>
            </thead>
          </table>
       <% end %>
      </div>
  </div>
<!--ジャンル一覧-->
  <div class="row mt-3">
    <div class="col-md-5">
      <table class="table table-inverse">
        <thead>
          <tr>
            <th class="pl-5">ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to edit_genre_path(genre.id), class:"btn btn-success" do %>  編集する  </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
