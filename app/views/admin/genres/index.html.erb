<div class="container">
  <div class="row">
    <div class="col-5">
    <h3>ジャンル一覧・追加</h3>
<!-- ジャンル新規登録フォーム -->
      <%= form_with model: Genre.new,url: admin_genres_path do |f| %>
      <form class="form-inline">
        <div class="form-group mr-5">
      ジャンル名
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
      </div>
    </form>
<!--ジャンル一覧-->
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
            <th></th>
            <!--<th colspan="3"></th>-->
          </tr>
        </thead>
        <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する",edit_genre_path(genre.id) %></td>
    </tr>
    <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>