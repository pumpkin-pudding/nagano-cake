<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 offset-sm-1">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-1">
      <table class="table ">
        <tr>
          <th class=>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class=>氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class=>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class=>郵便番号</th>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <th class=>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class=>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class=>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th class=>会員ステータス</th>
            <% if @customer.is_active == true %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td>退会</td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row mb-2 ">
    <div class="col-lg-12 offset-sm-2">
      <%= link_to "　　編集する　　", edit_admin_customer_path(id: @customer.id), class: "btn btn-success mx-3" %>
      <%= link_to "注文履歴一覧を見る", admin_order_path(id: @customer), class: "btn btn-primary mx-3" %>
    </div>
  </div>

</div>