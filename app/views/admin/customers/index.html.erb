<div class="container">
  <div class="row my-5">
      
      <h2>会員一覧</h2>
      
  </div>
  <div class="row my-3">
    <div class="col-sm-12 offset-sm-1">
      <table class="table thead-light">
        
        <thead>
          <tr>
            <th class="table-secondary">会員ID</th>
            <th class="table-secondary">氏名</th>
            <th class="table-secondary">メールアドレス</th>
            <th class="table-secondary">ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td class="align-middle"><%= customer.id %></td>
              <td class="align-middle"><u><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"font-weight-bold" %></u></td>
              <td class="align-middle"><%= customer.email %></td>
              <td class="align-middle">
                <% if customer.is_active == true %>
                  <p class="text-success font-weight-bold">有効</p>
                <% else %>
                  <p>退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>