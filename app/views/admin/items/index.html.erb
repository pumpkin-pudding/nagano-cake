<div class="container">
  <div class="col-md-8 mx-auto mt-5">
<div class="row mb-3">
   <div class="col-md-3 headline">
      <h4 class= "px-4 mb-3 bg-secondary text-dark font-weight-light">商品一覧</h4>
   </div>
   </div>

  <div class="d-flex justify-content-end mt-2 mb-2">
     <%= link_to new_admin_item_path do %>
     <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
     <% end %>
  </div>

      <table class="table">
        <thead>
         <tr>
           <th style="background-color: #F2F2F2;">商品ID</th>
           <th style="background-color: #F2F2F2;">商品名</th>
           <th style="background-color: #F2F2F2;">税抜価格</th>
           <th style="background-color: #F2F2F2;">ジャンル</th>
           <th style="background-color: #F2F2F2;">ステータス</th>
         </tr>
        </thead>
      <tbody>
       <% @items.each do |item| %>
         <tr>
           <td align="center"><%= item.id %></td>
           <td><%= link_to item.name ,admin_item_path(item) %></td>
           <td align="center"><%= item.non_taxed_price.to_s(:delimited) %></td>
           <td align="center"><%= item.genre.name %></td>
           <td align="center"><% if item.is_active == true %>
              <strong style="color:green;"><%= "販売中" %></strong>
　　　　      <% else %>
              <span style="color:gray;"><%= "販売停止中" %></span>
　　          <% end %>
           </td>
           </tr>
          <% end %>
        </tbody>
      </table>

      <div class="d-flex justify-content-center">
      <%= paginate @items %>
      </div>
      </div>
  </div>

