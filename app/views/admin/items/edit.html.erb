<h2>商品編集</h2>
<div class='container'>
<%= form_with model: @list do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>　
  
  <h4>商品名</h4>
  <%= f.text_field :name %>
  
  <h4>商品説明</h4>
  <%= f.text_area :text %>
  
  <h4>ジャンル</h4>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  
  <h4>税抜価格</h4>
  <%= f.text_area :non_taxed_price %>
  
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中" %>
  
  <%= f.submit '変更を保存' %>
  
<% end %>
</div>