<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>商品編集</h2>
      <%= form_with model: @item do |f| %>
    </div>
    <div class="col-xs-5">
      <table class="edit-item-form-table">
        <tbody>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :text %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
