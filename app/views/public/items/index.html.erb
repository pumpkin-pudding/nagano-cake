<div class="container my-5">
  <div class="row">
    <div class="col-md-3">
      <table class="table text-center table-hover">
  <thead class="table-bordered">
    <tr>
      <th class="h4">ジャンル一覧</th>
    </tr>
  </thead>
  <% @genre.each do |genre| %>
  <tr>
    <td>
      <%= link_to admin_genre_path(genre.id), method: :get, class: "text-dark" do %>
      <%= genre.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
    </div>

    <div class="col-md-9">
      <div class="d-flex">
        <h3><strong>商品一覧</strong></h3><h4 class="mt-1">(全<%= @items_all.count %>件)</h4>
      </div>

      <div class="d-flex flex-row">
        <% @items.each do |item| %>
          <div class="col-3 mt-3">
            <%= link_to item_path(item), class: "text-dark" do %>
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "180x140" %>
              <% else %>
                <!-- 画像が存在しない場合 -->
                <%= image_tag 'kabotya', size: "180x140" %>
              <% end %>
              <br>
              <%= item.name %><br>
              ¥<%= item.non_taxed_price.to_s(:delimited) %>(税込)
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="pagination justify-content-center mt-5">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
