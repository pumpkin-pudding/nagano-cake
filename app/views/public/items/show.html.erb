<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <table class="genre-table table table-bordered table-hover">
        <thead class="genre-thead">
          <tr>
          <th class="active">ジャンル検索</th>
          </tr>
        </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to items_path(genre_id: genre.id) do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>
    <div class="col-md-9">
      <div class="row mt-3">
        <div class="col-md-6">
          <div class="show-image">
            <%= image_tag @item.image, size:'300x200' %>
	        </div>
        </div>
      <div class="show-content">
      <div>
      </th>
      <div>
        <p><strong></strong><%= @item.name %></p>
      </div>
      <br>
      <div>
          <p><strong></strong><%= @item.text %></p>
      </div>

      <!--<br>-->
      <!--<div>-->
      <!--    <p><strong>ジャンル</strong><%= @item.genre %></p>-->
      <!--</div>-->
      <br>
      <div>
          <p><strong class="col-xs-4"></strong><%= (@item.non_taxed_price*1.1).floor.to_s(:delimited) %>円</p>
      </div>

      <br>
      <div>
      <p><strong class="col-xs-3"></strong>
      <% if @item.is_active == true %>
        <%= "販売中" %>
      <% else %>
        <%=  "販売停止中" %>
      <% end %>
      <br>
      </div>
      <div class="text-right">
          <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1 ... 100], placeholder: "個数選択" %>
          <%= f.submit 'カートに入れる', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>