<div class="container">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-sm-8 py-4 offset-sm-2">
      <h2>新規会員登録</h2>
    </div>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row my-3">
      <div class="col-2 offset-md-2"><%= f.label "名前" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-1"><%= f.text_field :last_name, :size => "30", placeholder: "令和" %></div>
      <div class="col-1 text-right pr-0 offset-md-2"><%= f.label "(名)" %></div>
      <div class="col-1"><%= f.text_field :first_name, :size => "30", placeholder: "道子" %></div>
    </div>
    <div class="row my-3">
      <div class="col-2 offset-md-2"><%= f.label "フリガナ" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(セイ)" %></div>
      <div class="col-1"><%= f.text_field :last_name_kana, :size => "30", placeholder: "レイワ" %></div>
      <div class="col-1 text-right pr-0 offset-md-2"><%= f.label "(メイ)" %></div>
      <div class="col-1"><%= f.text_field :first_name_kana, :size => "30", placeholder: "ミチコ" %></div>
    </div>
    <div class="row my-3">
      <div class="col-3 offset-md-2"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, :size => "30", placeholder: "sample@example.com" %></div>
    </div>
    <div class="row my-3">
      <div class="col-3 offset-md-2"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :zip_code, :size => "30", placeholder: "1001000" %></div>
    </div>
    <div class="row my-3">
      <div class="col-3 offset-md-2"><%= f.label "住所" %></div>
      <div class="col-3"><%= f.text_field :address, :size => "82", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
    </div>
    <div class="row my-3">
      <div class="col-3 offset-md-2"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :phone_number, :size => "30", placeholder: "08012345678" %></div>
    </div>
    <div class="row my-3">
      <div class="col-3 offset-md-2">
        <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <div class="col-3"><%= f.password_field :password, :size => "30"%></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-2"><%= f.label "パスワード(確認用)" %></div>
      <div class="col-3"><%= f.password_field :password_confirmation, :size => "30"%></div>
    </div>
    <div class="row">
      <div class="col-2 offset-md-5 my-3">
        <%= f.submit "　新規登録　", class:"col btn btn-success" %>
      </div>
    </div>
  <% end %>
  

  <%= render "public/shared/links" %>
  </div>