<div class="container px-5 px-sm-0">
  <div class="row mt-3">
    <div class="col-md-5">
      <table class="table table-inverse">
        <thead>
          <tr>
          <th>ショッピングカート</th>
          <th><%= link_to all_destroy_path, class:"btn btn-success", method: :delete do %>カートを空にする</th>
          <% end %>
          </tr>
          <tr>
            <th class="pl-5">商品名</th>
            <th class="pl-5">単価</th>
            <th class="pl-5">数量</th>
            <th class="pl-5">小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.name %></td>
              <td><%= cart_item.non_taxed_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item. price %></td>
            </tr>
            <tr>
              <td><%= link_to items_path, class:"btn btn-success" do %>買い物を続ける</td>
              <td><%= cart_item.price%></td>
              <% end %>
            </tr>
            <td><%= link_to new_order_path, class:"btn btn-success" do %>情報を入力する</td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
