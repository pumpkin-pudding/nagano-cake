<div class="row">
   <div class="col-xs-12">
     <h3><strong>注文履歴一覧</strong><h3>
     <table class="table table-bordered table-condensed">
     <tr>
           <th>注文日</th>
           <th class="col-xs-3">配送先</th>
           <th class="col-xs-2">注文商品</th>
           <th class="col-xs-1">支払料金</th>
           <th class="col-xs-2">ステータス</th>
           <th class="col-xs-2">注文詳細</th>
     </tr>
     <tbody>
     <% @orders.each do |order| %>
     <tr id="cart_item">
     <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
     <td class="align-middle">
       〒<%= zip_code %><br>
       <%= oreder.address %><br>
       <%= oreder.name %>
     </td>
     <td class="align-middle">
       <% oreder.items.each do |item| %>
        <div class="row">
         <div class="col">
          <%= item.name %>
         </div>
        </div>
       <% end %>
     </td>
     <td class="align-middle text=center"><%= oreder.billing_amount.to_s(:delimited) %>円</td>
     <td class="align-middle"><%= oreder.status_i18n %></td>
     <td class="align=middle text-center"><%= link_to '表示する', order_path(order),class: "btn", style: "background-color: #1A120B; #E5E%CB;" %></td>
     </td>
    </tr>
     <% end %>
    </tbody>
    </table>
    </div>
    </div>
    <div class="d-flex justify-content-center mt-4">

    </div>
    </div>
    </div>
