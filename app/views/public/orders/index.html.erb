<div class="container">
  <div class="col-md-8 mx-auto mt-5">
   <div>
<div class="row mb-3">
     <h4 class= "px-3 mb-3 bg-secondary text-dark font-weight-light">注文履歴一覧</h4>
     <table class="table table-bordered table-condensed">
      <thead class="thead-light">
     <tr>
           <th class="col-xs-3">注文日</th>
           <th class="col-xs-3">配送先</th>
           <th class="col-xs-2">注文商品</th>
           <th class="col-xs-1">支払金額</th>
           <th class="col-xs-2">ステータス</th>
           <th class="col-xs-2">注文詳細</th>
     </tr>
      </thead>
     <tbody>
     <% @orders.each do |order| %>
     <tr id="cart_item">
     <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
     <td class="align-middle">
       〒<%= order.zip_code %><br>
       <%= order.address %><br>
       <%= order.name %>
     </td>
     <td class="align-middle">
       <% order.order_details.each do |order_detail| %>
        <div class="row">
         <div class="col">
          <%= order_detail.item.name %>
         </div>
        </div>
       <% end %>
     </td>
     <td class="align-middle text=center"><%= order.billing_amount.to_s(:delimited) %>円</td>
     <td class="align-middle"><%= order.status %></td>
     <td class="align=middle text-center"><%= link_to '表示する', order_path(order),class: "btn", style: "background-color: #1A120B; #E5E%CB;" %></td>
     </td>
    </tr>
     <% end %>
    </tbody>
    </table>
    </div>
    </div>
    <div class="d-flex justify-content-center mt-4">

    </div>
    </div>
    </div>

