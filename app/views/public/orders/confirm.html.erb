<% content_for(:body_attributes) do %>
   data-turbolinks="false"
<% end %>

<div class="container">
  <div class="row justify-content-center order-new-title mt-5 mx-auto">
</div>
    <div class="col-md-3 headline">
      <h4 class= "px-4 mb-3 bg-secondary text-dark font-weight-light">注文情報確認</h4>
    </div>
</div>

  <div clss="row justify-content-center mt-4 mx-auto">
    <div class="col-md-8">
    <table class="table table-inverse table-bordered custom-table", style="border-color: #3C2A21;">
      <thead>

          <th style="background-color: #F2F2F2;">商品名</th>
          <th style="background-color: #F2F2F2;">単価(税込)</th>
          <th style="background-color: #F2F2F2;">数量</th>
          <th style="background-color: #F2F2F2;">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr id="cart_item">
          <td class="align-middle"><%= image_tag cart_item.item.get_image(100,100), class: "p-2" %><%=cart_item.item.name %></td>
          <td class="align-middle text-center"><%= price.to_s(:delimited) %></td>
          <td class="align-middle text-center"><%= amount %></td>
          <td class="align-middle subtotal-area text-center">
            <%= render 'public/cart_items/subtotal', cart_item: cart_item %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
  　<div class="col-md-10"></div>
  　<div class="col-md-2 index-amount">
  　　<table class="table table-inverse table-bordered", style="border-color: #3C2A21;">
      <tbody>
       <tr>
         <th style="background-color: #F2F2F2">送料</th>
         <td class="text-center"><%= @order.postage %>円</td>
       </tr>
       <tr>
         <th style="background-color: #F2F2F2;">商品合計</th>
         <td class="text-center"><%= @order_total_amount.to_s(:delimited) %>円</td>
       </tr>
       <tr>
         <th style="background-color: #F2F2F2;">請求金額</th>
         <td class="text-center"><%= @order_total_amount.to_s(:delimited) %>円</td>
       </tr>
      </tbody>
  </table>
  </div>
</div>

<div class="row justify-content-center mt-4 mx-auto">
  <div class="col-md-2">
    <h5><strong>支払方法</strong></h5>
  </div>
  <div class="col-md-8">
    <%= @order.payment_method %>
  </div>
</div>

<div class="row justify-content-center mt-4 mx-auto">
  <div class="col-md-2">
    <h5><strong>お届け先</strong></h5>
  </div>
<div class="col-md-8">
  <%= @address %><br>
  <%= @order.name %>
</div>
</div>

<div class="row mt-5">
 <div class="col text-center">
  <%= form_with model: @order, url: orders_thanks_path, method: :post do |f| %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :zip_code %>
   <%= f.hidden_field :address %>
  <%= f.submit '注文を確定する', class: 'btn', style: "background-color: #28a745; color: #E5E5CB;", data: { confirm: "注文確定をします。よろしいですか？" } %>
  <% end %>
 </div>
</div>
</div>