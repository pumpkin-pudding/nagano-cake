<h2>注文履歴詳細</h2>
<h3>注文情報</h3>
<table class="table">
    <tbody>
        <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        </tr>
        <tr>
            <th>配送先</th>
            <td>
                〒<%= @order.zip_code %><br>
				<%= @order.address %><br>
				<%= @order.name %>
            </td>
        </tr>
        <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
        </tr>
        <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
        </tr>
    </tbody>
</table>

<h3>請求情報</h3>
<table class="table">
    <tr>
        <th>商品合計</th>
        <td><%= @order.billing_amount %>円</td>
    </tr>
    <tr>
        <th>配送料</th>
        <td><%= @order.postage %>円</td>
    </tr>
    <tr>
        <th>ご請求額</th>
        <td><%= @order.billing_amount + @order.postage %>円</td>
    </tr>
</table>

<h3>注文内容</h3>
<table class="table">
    <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item._price %>円</td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.amount * order_item._price %>円</td>
        </tr>
    </tbody>
    
</table>