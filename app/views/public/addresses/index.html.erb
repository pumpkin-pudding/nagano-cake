<div class="container">
    <h2>配送先登録/一覧</h2>
    <%= form_with model: Address.new do |f| %>
        <div class="row py-3">
            <label for="zip_code" class="col-md-3 col-form-label">
              郵便番号(ハイフンなし)
            </label>
            <div class="col-md-9">
                <div class="form-floating">
                    <%= f.text_field :zip_code, placeholder: "0000000" %>
                </div>
            </div>
        </div>

        <div class="row py-3">
            <label for="address" class="col-md-3 col-form-label">
                住所
            </label>
            <div class="col-md-9">
                <div class="form-floating">
                    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
                </div>
            </div>
        </div>

        <div class="row py-3">
            <label for="name" class="col-md-3 col-form-label">
                宛名
            </label>
            <div class="col-md-9">
                <div class="form-floating">
                    <%= f.text_field :name, placeholder: "令和道子" %>
                </div>
            </div>
        </div>

        <div class="row justify-content-end py-3">
            <div class="col-md-9">
                <div class="text-right">
                    <%= f.submit '新規登録', class: "btn btn-success" %>
                </div>
            </div>
        </div>
    <% end %>

    <table class="table-bordered">
        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @address.each do |address| %>
            <tr>
                <td><%= address.zip_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                    <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                    <%= link_to '削除する', address_path(address.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
