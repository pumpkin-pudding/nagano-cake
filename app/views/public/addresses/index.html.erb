<h3>配送先登録/一覧</h3>
<%= form_with model: Address.new do |f| %>
<h4>郵便番号(ハイフンなし)</h4>
<%= f.text_field :zip_code %>

<h4>住所</h4>
<%= f.text_field :address %>

<h4>宛名</h4>
<%= f.text_field :name %>

<%= f.submit '新規登録' %>
<% end %>

<table class="table">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @address.each do |address| %>
        <tr>
            <td><%= address.zip_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
                <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                <%= link_to '削除する', address_path(address.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
        </tr>
    </tbody>
</table>
