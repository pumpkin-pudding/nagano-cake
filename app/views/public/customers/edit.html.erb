<div class="container px-5 px-sm-0">
  <h4>会員情報編集</h4>
    <div class="row mt-4">
      <h2><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h2>

<%= form_with model: @customer,url: customers_information_path, method: :patch do |f| %>
<table class="table table-borderless">
            <thead>
              <tr>
               <td>会員ID</td>
                <td><%= @customer.id %></td>
                <%#= f.label :"#{@customer.id}" %>
              </tr>
              <tr>
                <td>氏名</td>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
              </tr>
              <tr>
                <td>フリガナ</td>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                <td>郵便番号</td>
                <td><%= f.text_field :zip_code %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :address %></td>
              <tr>
              <tr>
                <td>電話番号</td>
                <td><%= f.text_field :phone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.text_field :email %></td>
              </tr>
              <tr>
              <tr>
                <td><%= f.submit '編集内容を保存', class:'btn btn-success' %></td>
                <% end %>
                <td>
                <%= link_to "退会する", customers_check_path, class: "btn btn-danger" %>
              </td>
              </tr>
            </thead>
          </table>
        </div>
