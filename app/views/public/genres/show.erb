<div class="container my-5">
  <div class="row">
    <div class="col-md-3">
      <table class="table text-center table-hover">
  <thead class="table-bordered">
    <tr>
      <th class="h4">ジャンル一覧</th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tr>
    <td>
      <%= link_to customers_genre_path(genre.id), method: :get, class: "text-dark" do %>
      <%= genre.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
    </div>

  <div class="col-md-9">
    <h3><strong><%= @genre.name %>一覧</strong></h3>
    <div class="d-flex flex-wrap">
      <% @genre.items.each do |item| %>
        <div class="col-3 mt-3">
          <%= link_to item_path(item), class: "text-dark" do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "180x140" %>
          <% else %>
            <!-- 画像が存在しない場合 -->
             <%= image_tag 'kabotya', size: "180x140" %>
           <% end %>
            <%= item.name %><br>
             ¥<%= item.non_taxed_price.to_s(:delimited) %>(税込)
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>